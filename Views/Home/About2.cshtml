<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,
    initial-scale=1.0">
    <title>Responsive Sidebar Menu</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    @*<link rel="stylesheet" href="style.css" />*@
    <script defer src="main.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            position: relative;
            height: 100vh;
            width: 100%;
            background: rgb(226, 226, 233);
        }

            body.dark-mode {
                background: rgb(27, 27, 34);
            }

        nav {
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            align-items: start;
            position: fixed;
            width: 270px;
            height: 100%;
            min-height: 350px;
            color: white;
            background: rgba(0, 0, 0, 0.801);
            border-top-right-radius: 20px;
            border-bottom-right-radius: 10px;
            transition: ease-in 0.3s;
            z-index: 100;
        }

            nav.hide {
                width: 0;
            }

            nav span {
                width: 100%;
                text-align: center;
                padding: 20px 0;
                font-size: 28px;
                font-weight: 800;
                overflow: hidden;
                background-color:blue;
            }

        .sidebar-menu {
            display: flex;
            flex-wrap: wrap;
            flex-direction: column;
            justify-content: space-around;
            height: 70%;
            width: 100%;
            list-style: none;
            overflow: hidden;
        }

            .sidebar-menu li {
                text-align: center;
                width: 100%;
            }

                .sidebar-menu li a {
                    display: inline-flex;
                    align-items: center;
                    width: 95%;
                    padding: 5px 15px;
                    color: white;
                    text-decoration: none;
                    font-size: 25px;
                    transition: ease-in 0.2s;
                    border: 1px solid rgba(0, 0, 0, 0);
                    border-radius: 5px;
                }

                    .sidebar-menu li a:hover {
                        color: rgb(45, 209, 67);
                        border: 1px solid white;
                    }

                    .sidebar-menu li a i {
                        margin: 0 18px;
                        width: 20px;
                    }

        #toggle-btn {
            position: absolute;
            display: flex;
            justify-content: center;
            align-items: center;
            top: 18px;
            right: -39px;
            width: 40px;
            height: 40px;
            font-size: 18px;
            background: rgba(0, 0, 0, 0.801);
            border-radius: 0 7px 7px 0;
            border: none;
            cursor: pointer;
            color: white;
            transition: linear 0.2s;
        }

            #toggle-btn:hover {
                background: rgba(0, 0, 0, 0.623);
                color: rgb(45, 209, 67);
            }

        section {
            display: flex;
            background-color:blue;
            justify-content: center;
            align-items: flex-start;
            position: absolute;
            top: 0;
            left: 270px;
            height: 100vh;
            width: calc(100% - 270px);
            padding: 30px;
            transition: ease-in 0.3s;
        }

            section.expand {
                width: 100%;
                left: 0;
            }

            section h1 {
                color: rgb(0, 0, 0);
                font-size: 32px;
                text-align: center;
            }

                section h1.dark-mode {
                    color: white;
                }
    
    </style>
</head>

<body>
    <nav>
        <button type="button" id="toggle-btn">
            <i class="fa fa-bars"></i>
        </button>
        <span>Gvidas</span>
        <ul class="sidebar-menu">
            <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
            <li><a href="#"><i class="fa fa-suitcase"></i>Projects</a></li>
            <li><a href="#"><i class="fa fa-user"></i>Profile</a></li>
            <li><a href="#"><i class="fa fa-gear"></i>Settings</a></li>
            <li id="bgModeBtn"><a href="#"><i id="bgModeIcon" class="fa fa-sun-o"></i>Mode</a></li>
        </ul>
    </nav>
    <section>
     
        <h1>Welcome</h1>

    </section>

<script>
    const nav = document.querySelector('nav');
    const toggle_btn = document.getElementById('toggle-btn');
    const content = document.querySelector('section');

    toggle_btn.onclick = function () {
        nav.classList.toggle('hide');
        content.classList.toggle('expand');
    };

    const body = document.querySelector('body');
    const bgModeBtn = document.getElementById('bgModeBtn');
    const bgModeIcon = document.getElementById('bgModeIcon');
    const sectionHeader = document.querySelector('section h1');

    bgModeBtn.onclick = function () {
        body.classList.toggle("dark-mode");
        bgModeIcon.classList.toggle("fa-sun-o");
        bgModeIcon.classList.toggle("fa-moon-o");
        sectionHeader.classList.toggle("dark-mode");
    }
</script>
    </body>
</html>
