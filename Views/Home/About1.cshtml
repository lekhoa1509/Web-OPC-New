        }
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            //jquery for toggle sub menus
            $('.sub-btn').click(function () {
                $(this).next('.sub-menu').slideToggle();
                $(this).find('.dropdown').toggleClass('rotate');
            });

            //jquery for expand and collapse the sidebar
            $('.menu-btn').click(function () {
                $('.side-bar').addClass('active');
                $('.menu-btn').css("visibility", "hidden");
            });

            $('.close-btn').click(function () {
                $('.side-bar').removeClass('active');
                $('.menu-btn').css("visibility", "visible");
            });
        });
    </script>
    <script>
        var chartData = {
            labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5'],
            datasets: [{
                label: 'Doanh số bán hàng',
                data: [100, 150, 200, 180, 220],
                borderColor: 'blue',
                fill: false
            }]
        };

        var lineChartCanvas = document.getElementById('lineChart').getContext('2d');

        var lineChart = new Chart(lineChartCanvas, {
            type: 'line',
            data: chartData,
            options: {
                responsive: true,
                maintainAspectRatio: false, // Tắt tỷ lệ giữa chiều cao và chiều rộng
                scales: {
                    x: {
                        type: 'category',
                        position: 'bottom'
                    },
                    y: {
                        beginAtZero: true
                    }
                },
                height: 300 // Đặt chiều cao mong muốn
            }
        });
    </script>

    <script>
        // Model
        var doughnutData = {
            labels: ['Loại A', 'Loại B', 'Loại C'],
            datasets: [{
                data: [30, 45, 25],
                backgroundColor: ['#36a2eb', '#ff6384', '#ffcd56']
            }]
        };

        // Controller
        var doughnutChartCanvas = document.getElementById('doughnutChart').getContext('2d');

        var doughnutChart = new Chart(doughnutChartCanvas, {
            type: 'doughnut',
            data: doughnutData,
            options: {
                responsive: true,
                maintainAspectRatio: false, // Tắt tỷ lệ giữa chiều cao và chiều rộng
                aspectRatio: 1, // Thiết lập tỷ lệ chiều rộng:chiều cao (vd: 1:1)
            },
        });
    </script>

